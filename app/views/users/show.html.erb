<% provide(:page_title, @user.name) %>

<aside class="col-md-4">
  <section class="user_info">
    <%= gravatar_for @user %>
    <h1><%= @user.name %></h1>
  </section>
</aside>
<% if @lposts.any?
  post_count = @lposts.count %>
  <h3><%=
    "#{post_count} Ledger #{'Post'.pluralize(post_count)} by #{@user.name}"
  %></h3>
  <%= will_paginate @lposts %>
  <br clear="all">
  <ol class="list-ledger-objects">
    <%= render @lposts %>
  </ol>
  <%= will_paginate @lposts %>
<% end %>

