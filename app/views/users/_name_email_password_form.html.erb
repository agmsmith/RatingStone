    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :fancy_labels, "Label Style" %>
      <%= f.select :fancy_labels,
        [["Text labels using words, like Up/Meh/Down, Reply, Quote", 0],
        ["Short text labels, like ^/~/v, R, Q", 1],
        ["Iconic labels, like thumbs up 👍/👉/👎, thought bubbles 🗩 and arrows 🔃.", 2]],
        class: 'form-control' %>
 
      <%= f.submit yield(:button_text), class: "btn btn-primary form-control" %>
    <% end %>

