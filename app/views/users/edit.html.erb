<% provide(:page_title, 'Edit User') %>
<% provide(:button_text, 'Save Changes') %>

<h1>Update your Profile</h1>

<% if request.env['HTTPS'] != 'on' # Apache web server HTTPS detection. %>
  <div class="row center">
    <div class="col-md-6 col-md-offset-3">
      <div class="alert alert-warning" role="alert">
        You are accessing this web page without using encryption.
        That means someone could more easily spy on your Internet
        connection, see your changed password, and then pretend to be
        you.  If your web browser is new enough, you may wish to
        switch to the encrypted page.
      </div>

      <a href="<%= edit_user_url.sub(/http:/, 'https:') %>"
       class="btn btn-lg btn-primary">Switch to <strong>secure</strong> Profile Update</a>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'name_email_password_form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank" rel="noopener">Change</a>
    </div>
  </div>
</div>

