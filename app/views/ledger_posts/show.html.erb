<% provide(:page_title, "All Versions of Post #" + params[:id]) %>

<h1>All Versions of Post #<%= params[:id] %></h1>

<div class="row">
<% if @ledger_post&.any? %>
  <%= will_paginate @ledger_post %>
  <ol class="list-ledger-objects">
    <%= render @ledger_post %>
  </ol>
  <%= will_paginate @ledger_post %>
<% else %>
  <p>Sorry, no versions of post "<%= params[:id] %>" exist.</p>
<% end %>
</div>

