<% if ledger_object.creator_owner?(current_ledger_user) %>
  <% if ledger_object.deleted? %>
    <%= form_with(url: undelete_ledger_base_path(ledger_object),
      local: true, action: :undelete, method: :post) do |f| %>
      <%= f.submit "Undelete #{ledger_object.base_s}",
        class: "btn btn-info button-full-width" %><br>
      <%= f.text_area :reason, placeholder: "Reason why...",
        class: "delete-reason" %>
    <% end %>
  <% else %>
    <%= form_with(url: ledger_base_path(ledger_object),
      local: true, action: :delete, method: :delete) do |f| %>
      <%= f.submit "Delete #{ledger_object.base_s}",
        class: "btn btn-danger button-full-width" %><br>
      <%= f.text_area :reason, placeholder: "Reason why...",
        class: "delete-reason" %>
    <% end %>
  <% end %>
<% end %>

