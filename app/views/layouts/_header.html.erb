    <header class="navbar navbar-inverse">
      <div class="container-fluid">
        <%= link_to "Rating Stone", root_path, id: "logo" %>
        <%= luser = current_user&.ledger_user
          if luser # Logged in, display name and current points available.
            luser.update_current_points
            link_to " #{luser.name} #{points_html(luser)}",
              current_user, id: "user_title"
          else # Not logged in, don't display anything extra.
            ""
          end
        %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "About", about_path %></li>
            <% if logged_in? %>
              <li><%= link_to "Posts", ledger_posts_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Other <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Users", users_path %></li>
                  <li><%= link_to "Objects", ledger_bases_path %></li>
                  <li><%= link_to "Groups", ledger_groups_path %></li>
                  <li><%= link_to "Links", link_bases_path %></li>
                  <li><%= link_to "Opinions", link_opinions_path %></li>
                  <li><%= link_to "RealCount™", wordcounter_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li><%= link_to "Help", help_path %></li>
                  <li><%= link_to "Contact", contact_path %></li>
                  <li><%= link_to "Log out", logout_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Contact", contact_path %></li>
              <li><%= link_to "RealCount™", wordcounter_path %></li>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
