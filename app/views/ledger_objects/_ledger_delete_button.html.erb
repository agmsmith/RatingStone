<% if ledger_object.creator_owner?(current_ledger_user) %>
  <span class="delete-button">
  <% if ledger_object.deleted %>
    <%= form_with(url: undelete_ledger_object_path(ledger_object),
      local: true, action: :undelete, method: :post) do |f| %>
      <%= f.submit "Undelete #{ledger_object.base_s}", class: "btn btn-info" %>
      <%= f.text_area :reason, placeholder: "Reason why...",
        class: "delete-reason" %>
    <% end %>
  <% else %>
    <%= form_with(url: ledger_object_path(ledger_object),
      local: true, action: :delete, method: :delete) do |f| %>
      <%= f.submit "Delete #{ledger_object.base_s}", class: "btn btn-danger" %>
      <%= f.text_area :reason, placeholder: "Reason why...",
        class: "delete-reason" %>
    <% end %>
  <% end %>
  </span>
<% end %>

