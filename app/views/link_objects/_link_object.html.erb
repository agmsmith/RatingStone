<li id="link_object_<%= link_object.id %>">
<% if !link_object.creator_owner?(current_ledger_user) %>
  <span class="not_allowed_to_view">
    <%= "##{link_object.id} #{link_object.class.name} You don't have " \
      "permission to view this object." %>
  </span>
<% else %>
  <% if link_object.creator_owner?(current_ledger_user) %>
    <% if link_object.deleted %>
      <%= button_to "Undelete", undelete_link_object_path(link_object),
        method: :post,
        data: { confirm: "Sure you want to undelete this link?" },
        form_class: 'undeletebutton', class: 'btn btn-info'
      %>
    <% else %>
      <%= button_to "Delete", link_object_path(link_object),
        method: :delete, data: { confirm: "Really delete this link?" },
        form_class: 'deletebutton', class: 'btn btn-danger'
      %>
    <% end %>
  <% end %>
  <span class="<%= link_object.deleted ? "deleted" : "content" %>">
    <%= link_to "##{link_object.id} #{link_object.type}",
      link_object_path(link_object) %>
      Parent: <%= link_to link_object.parent.base_s,
        ledger_object_path(link_object.parent_id) %>
      Child: <%= link_to link_object.child.base_s,
        ledger_object_path(link_object.child_id) %><BR>
    <small><%= link_object.created_at.getlocal %></small>
  </span>
<% end %>
</li>

